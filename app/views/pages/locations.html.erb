<h1>Pages#locations</h1>

<% content_for(:head) do  %>
<style type="text/css">
  #map_canvas {
    height: 400px;
  }
</style>
<% javascript_include_tag :defaults %>
<script type="text/javascript" src="/javascripts/jquery.min.js"></script>
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
  
     <% t = Location.find(:first) %>
      var map;
      $(document).ready(function() {
          alert("message");
      var myOptions = { 
       zoom: 14,
       center: new google.maps.LatLng(<%= t.long %>, <%= t.lat %>),
       mapTypeId: google.maps.MapTypeId.ROADMAP
       };

      temp_canvas = document.getElementById('map_canvas');
       map = new google.maps.Map(document.getElementById('map_canvas'), myOptions);
                                                                    

      <% locs = Location.find(:all) %>
      <% locs.each do |curr_loc| %>
     var marker = new google.maps.Marker({
        position: new google.maps.LatLng(<%= curr_loc.long %>, <%= curr_loc.lat %>),
        title: "<%= curr_loc.name %>" 
     });

     marker.setMap(map);
     <% end %>

    });

</script>
<% end %>

<div id="map_canvas"></div>
<div id="locs_div"></div>

<% loc = Location.find(:all) %>

<% loc.each do |curr_loc| %>
<h2><%= curr_loc.name %></h2>
<%= curr_loc.address %>
<br>
<% curr_loc.lat %>
<% curr_loc.long %>
<% end %>
